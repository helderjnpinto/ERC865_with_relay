{
  "name": "erc865_with_relay",
  "version": "1.0.0",
  "description": "Truffle project with ERC865 and token relay service, testing",
  "main": "index.js",
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "copy-static": "cp -r ./server/static/** ./dist-server/static",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "watch:dev": "nodemon"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helderjnpinto/ERC865_with_relay.git"
  },
  "keywords": [
    "ERC865",
    "node",
    "truffle",
    "relay",
    "gassless",
    "transfer",
    "ERC20"
  ],
  "author": "helderjnpinto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/helderjnpinto/ERC865_with_relay/issues"
  },
  "homepage": "https://github.com/helderjnpinto/ERC865_with_relay#readme",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@biconomy/mexa": "^1.5.13",
    "@openzeppelin/contracts": "^3.2.0",
    "@openzeppelin/test-environment": "^0.1.6",
    "@openzeppelin/test-helpers": "^0.5.7",
    "@truffle/hdwallet-provider": "^1.1.1",
    "@vue/cli": "^4.5.8",
    "bn-chai": "^1.0.1",
    "body-parser": "^1.19.0",
    "chai": "^4.2.0",
    "chai-bignumber": "^3.0.0",
    "eth-sig-util": "^2.5.3",
    "express": "^4.17.1",
    "nodemon": "^2.0.6",
    "npm-run-all": "^4.1.5",
    "react": "^17.0.0",
    "rimraf": "^3.0.2",
    "truffle": "^5.1.49",
    "web3": "^1.3.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "devDependencies": {
    "vue-cli-plugin-vuetify": "~2.0.7"
  }
}
